<%= render 'admin/link' %>

<h2 class="col-5 py-5 px-5"><%= @customer.full_name %>さんの会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>

<div class="col-9 mx-auto">
  <table class="table table-borderless">
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= f.text_field :last_name %>　<%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.text_field :last_name_kana %>　<%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address, :size => "60" %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td>
        <%= f.radio_button :is_deleted, :false, checked: "checked" %>
        <%= f.label :有効 %>
        <%= f.radio_button :is_deleted, :true %>
        <%= f.label :退会 %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td>
        <div class="mt-3">
          <div class="btn-group btn-group-lg">
            <%= f.submit '変更を保存', class: "btn btn-success" %>
          </div>
        </div>
      </td>
    </tr>
  </table>
</div>

<% end %>

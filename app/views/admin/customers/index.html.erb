<%= render 'admin/link' %>

<h2 class="col-4 py-5 px-5">会員一覧</h2>

<div class="col-8 mx-auto">
  <table class="table table-borderless">
    <thead class="table-light">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <% @customers.each do |customer| %>

    <tbody>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_deleted? %>
            <p class="fw-bold text-muted">退会</p>
          <% else %>
            <p class="fw-bold text-success">有効</p>
          <% end %>
        </td>
      </tr>
    </tbody>

    <% end %>

  </table>
</div>

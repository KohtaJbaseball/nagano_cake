<%= render 'admin/link' %>

<h2>ジャンル一覧・追加</h2>

<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <table>
    <tr>
      <th>ジャンル名</th>
      <td><%= f.text_field :name %></td>
      <td><%= f.submit '新規登録' %></td>
    </tr>
  </table>
<% end %>

  <table>
    <thead>
      <tr>
        <td　colspan="2">ジャンル</td>
      </tr>
    </thead>

    <% @genres.each do |genre| %>
      <tbody>
        <tr>
          <td><%= genre.name %></td>
          <td>
            <%= link_to edit_admin_genre_path(genre.id) do %>
              <button class="btn btn-default">編集する</button>
            <% end %>
          </td>
        </tr>
      </tbody>
    <% end %>

  </table>


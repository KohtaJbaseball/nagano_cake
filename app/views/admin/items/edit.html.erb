<%= render 'admin/link' %>

<h2>商品編集</h2>

<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>

  <table>
    <tr>
      <td>商品画像</td>
      <td><%= f.file_field :image_id, accept: "image/*" %></td>
    </tr>
    <tr>
      <td>商品名</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= f.text_area :introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= f.select :genre_id, [['ケーキ',1],['プリン',2],['焼き菓子',3],['キャンディ',4]], { include_blank: '--選択してください--'} %></td>
    </tr>
    <tr>
      <td>税抜価格</td>
      <td><%= f.text_field :price %>円</td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td></td>
    </tr>
  </table>

  <%= f.submit '変更を保存' %>

<% end %>

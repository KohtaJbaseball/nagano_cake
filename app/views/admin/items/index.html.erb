<%= render 'admin/link' %>

<div class="container">
  <div class="row justify-content-between">
    <h2 class="col-4 py-5 px-5">商品一覧</h2>
    <div class="col-2 py-5 px-5">
      <%= link_to "＋", new_admin_item_path, class: "btn btn-outline-dark" %>
    </div>
  </div>

    <div class="row">
      <div class="col-8 mx-auto">
        <table class="table table-borderless">
          <thead class="table-light">
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
        <% @items.each do |item| %>
          <tbody>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item.id) %></td>
              <td><%= item.with_tax_price %></td>
              <td><%= item.genre.name %></td>
              <td class="sale-status"><%= item.is_active_i18n %></td>
            </tr>
          </tbody>
        <% end %>
        </table>
      </div>
    </div>


</div>

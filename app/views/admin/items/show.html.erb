<%= render 'admin/link' %>

<h2 class="col-4 py-5 px-5">商品詳細</h2>

<div class="container">
  <div class="row">
    <p class="col-4">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "300x250" %>
      <% else %>
        <%= image_tag 'no_image', size: "300x250" %>
      <% end %>
    </p>

    <table class="col-6">
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <td>
          税込価格<br>
          （税抜価格）
        </td>
        <td><%= @item.with_tax_price %> (<%= @item.price %>)円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td class="sale-status"><%= @item.is_active_i18n %></td>
      </tr>
    </table>
  </div>
</div>

<div class="text-center">
  <%= link_to edit_admin_item_path(@item.id) do %>
    <button class="btn btn-success mt-5">編集する</button>
  <% end %>
</div>
<%= render 'admin/link' %>

<h2>商品詳細</h2>

  <p>
    <% if @item.image.attached? %>
      <%= image_tag @item.image, size: "300x300" %>
    <% else %>
      <%= image_tag 'no_image', size: "300x300" %>
    <% end %>
  </p>

  <table>
    <tr>
      <td>商品名</td>
      <td><%= @item.name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= @item.introduction %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= @item.genre.name %></td>
    </tr>
    <tr>
      <td>
        税込価格<br>
        （税抜価格）
      </td>
      <td><%= @item.with_tax_price %> (<%= @item.price %>)円</td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td></td>
    </tr>
  </table>

  <%= link_to edit_admin_item_path(@item.id) do %>
    <button class="btn btn-default">編集する</button>
  <% end %>
<%= render 'public/public_link' %>

<h2 class="col-4 py-5 px-5">会員情報編集</h2>

<%= form_with model: @customer, url: update_customer_path, method: :patch, local: true do |f| %>

  <div class="col-10 px-5 mx-5">
    <table class="table table-borderless">
      <tr>
        <td>氏名</td>
        <td>
          <%= f.text_field :last_name, :size => "30" %>　　<%= f.text_field :first_name %>
        </td>
        </div>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td>
          <%= f.text_field :last_name_kana, :size => "30" %>　　<%= f.text_field :first_name_kana %>
        </td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= f.text_field :postal_code, :size => "30" %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address, :size => "70" %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= f.text_field :telephone_number, :size => "30" %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= f.text_field :email, :size => "30" %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit '編集内容を保存', class: "btn btn-success px-5" %></td>
        <td>
          <%= link_to customers_quit_path do %>
            <button class="btn btn-success px-3">退会する</button>
          <% end %>
        </td>
      </tr>
    </table>
  </div>

<% end %>

<h2>マイページ</h2>

<table>
  <tr>
    <th>登録情報</th>
    <th>
      <%= link_to customers_edit_path do %>
        <button class="btn btn-default">編集する</button>
      <% end %>
    </th>
  </tr>
  <tr>
    <td>氏名</td>
    <td><%= @customer.first_name %><%= @customer.last_name %></td>
  </tr>
  <tr>
    <td>カナ</td>
    <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
  </tr>
  <tr>
    <td>郵便番号</td>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <td>電話番号</td>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <td>メールアドレス</td>
    <td><%= @customer.email %></td>
  </tr>
</table>

<table>
  <tr>
    <th>配送先</th>
    <td></td>
  </tr>
  <tr>
    <th>注文履歴</th>
    <td></td>
  </tr>
</table>

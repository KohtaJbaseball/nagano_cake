<%= render 'public/public_link' %>

<div class="container py-5 px-5">
  <div class="row">
    <div class="col-4">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, size: "300x250" %>
      <% else %>
        <%= image_tag 'no_image', size: "300x250" %>
      <% end %>
    </div>

    <div class="col-6">
      <h2><%= @item.name %></h2>
        <p class="pb-5 fs-5"><%= @item.introduction %></p>
        <p class="pb-4 fs-5">¥<%= @item.with_tax_price.to_s(:delimited) %>(税込)</p>
      <%= form_with model: @cart_item do |f| %>
        <p>
          <%= f.select :amount, *[1..10], { include_blank: '個数選択'}, class: "mx-3 px-3 py-2" %>
        <%= f.hidden_field :item_id, value: @item.id %>
          <%= f.submit "カートに入れる", class: "btn btn-success mx-3 py-2 px-3" %>
        </p>
      <% end %>
    </div>
  </div>
</div>
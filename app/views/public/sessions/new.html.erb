<%= render 'public/public_link' %>

<h2 class="col-4 py-5 px-5">ログイン</h2>

<%= form_with model: @customer, url: customer_session_path, local: true do |f| %>

  <div class="container col-8 mx-auto">
    <table class="table table-borderless">
      <tr>
        <td>メールアドレス</td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <td>パスワード</td>
        <td><%= f.password_field :password, autocomplete: "current-password" %></td>
      </tr>
      <tr>
        <td></td>
        <div class="btn-group btn-group-lg">
          <td><%= f.submit "ログイン", class: "btn btn-primary px-5" %></td>
        </div>
      </tr>
    </table>
  </div>
<% end %>

  <h2 class="col-4 py-3 px-5">会員登録がお済みでない方</h2>
  <div class="col-4 px-5">
    <%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。
  </div>

